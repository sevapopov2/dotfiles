#aliases - quick commands to invoke different options
#vsCode launch alias
alias VSCode="code-insiders"
#git commands aliases
alias gs="git status"
alias ga="git add"
alias grs="git restore"
#git commit without options
alias gc="git commit"
#Git commit with message
alias gcm="git commit -m"
#Git clone alias
alias gcl="git clone"
#Git fetch alias
alias gf="git fetch"
alias gp="git push"
alias gb="git branch"
alias gco="git checkout"
alias gpo="git push origin"
alias gplo="git pull origin"
alias grm="git remote"
#directory history aliases
alias d="dirs -v"
for index ({0..9}) alias "$index"="cd +${index}"; unset index

#Alias to quickly activate python virtual environment (venv)
alias svba="source venv/bin/activate"

#Aliases for pipenv interaction
#Alias to install production dependencies
alias pvi="pipenv install"
#Alias to install development dependencies like pytest and it's plugins
alias pvid="pipenv install --dev"
#Alias to lock pipenv dependencies to Pipfile.lock
alias pvl="pipenv lock"
#Alias to run pipenv
alias pvr="pipenv run"
#Alias to remove pipenv virtual environment
alias pvrm="pipenv --rm"
#Alias to uninstall dependency from pipenv virtual environment
alias pvu="pipenv uninstall"